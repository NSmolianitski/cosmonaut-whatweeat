@model WhatWeEat.ViewModels.MealViewModel

<div class="modal-header">
    <h5 class="modal-title" id="create-meal-modal-title">Новое блюдо</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form id="create-meal-form" asp-action="CreateMeal" method="post">
        <div class="form-group">
            <label asp-for="Name">Название блюда:</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Введите название блюда"/>
            <span asp-validation-for="Name" id="create-meal-form-error-field" class="text-danger"></span>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            <button type="submit" id="submit-button" class="btn btn-primary">Сохранить блюдо</button>
        </div>
    </form>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}